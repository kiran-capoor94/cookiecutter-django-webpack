# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.{py,rst,ini}]
indent_style = space
indent_size = 4

[*.{html,css,scss,json,yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[nginx.conf]
indent_style = space
indent_size = 2

# Indentation override for all JS under lib directory
[*.js]
indent_style = space
indent_size = 2